<%- include("./partials/header")%>
<div class="container-fluid text-center bg-primary bg-opacity-25 user-select-none min-vh-100">
<h1 style="font-family: italic; padding: 1rem 0" class="fs-5 lh-lg text-secondary">weather forecast for 5 days with data every 3 hours of the day </h1>
<h5 class="shadow-none lh-lg mb-2 bg-body rounded text-danger">Weather forecast for <%=info.city.name%>, <%=info.city.country%> </h5>
<% temperature.forEach(function(temp){ %>

    <div class="container-fluid text-center mt-3 shadow-lg mb-5 bg-primary bg-opacity-50 rounded ">
        <h2 class=" fs-5 pt-3 text-secondary"><%=new Date(temp.dt_txt).toLocaleDateString()%> <%=new Date(temp.dt_txt).toLocaleTimeString()%></h2>
        <div class="row">
          <div class="col-md">
            <p style="font-family: italic;" class="lh-lg fs-4 shadow-sm mt-3 bg-body rounded text-primary">Temperature: <%=temp.main.temp%>&deg;C</p>
            <p style="font-family: italic;" class="lh-lg fs-4  shadow-sm bg-body rounded text-primary">Condition: <%=temp.weather[0].description%></p>
        </div>
        <div class="col">
            <p style="font-family: italic;" class="mt-3 fs-5 shadow-sm text-primary bg-body rounded lh-md">Maximum Temperature:  <%=temp.main.temp_max%>&deg;C </p>
            <p style="font-family: italic;" class="mt-3 fs-5 shadow-sm text-primary bg-body rounded lh-md">Minimum Temperature:  <%=temp.main.temp_min%>&deg;C </p>
            <p style="font-family: italic;" class="mt-3 fs-5 shadow-sm text-primary bg-body rounded lh-md">Humidity:   <%=temp.main.humidity%>%</p>
        </div>
        <div>
        <img class="shadow-sm bg-body mb-2 rounded bg-opacity-50" style="width: 20%" src=" http://openweathermap.org/img/wn/<%=temp.weather[0].icon%>@2x.png">
       </div>
        </div>
      </div>
<% }); %>
</div>
<%- include("./partials/footer")%>


