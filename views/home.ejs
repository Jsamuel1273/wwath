<%- include("./partials/header")%>
<div class="container-fluid text-center bg-primary bg-opacity-25 user-select-none min-vh-100">
    <h1 style="padding: 1rem 0;" class="fs-3 lh-md text-secondary">Weather App</h1>
     <h5 class="mt-3 shadow-none lh-lg mb-2 bg-body rounded text-danger">Current weather for conditions for <%=city%>, <%=country%> </h5>
     <div class="container-fluid text-center  mt-3 shadow-lg mb-5 bg-primary bg-opacity-50 rounded p-4">
       <div class="row">
         <div class="col-md">
           <p style="font-family: italic;" class="lh-lg fs-4 shadow-sm mt-3 bg-body rounded text-primary">Temperature: <%=temperature%>&deg;C</p>
           <p style="font-family: italic;" class="lh-lg fs-4  shadow-sm bg-body rounded text-primary">Condition: <%=description%></p>
       </div>
       <div class="col">
           <p style="font-family: italic;" class="mt-3 fs-4 shadow-sm text-primary bg-body rounded lh-lg">Maximum Temperature: <%=maxTemperature%>&deg;C </p>
           <p style="font-family: italic;" class="mt-3 fs-4 shadow-sm text-primary bg-body rounded lh-lg">Minimum Temperature: <%=minTemperature%>&deg;C </p>
       </div>
       <div>
       <img class="shadow-sm bg-body mb-2 rounded bg-opacity-50" style="width: 20%" src=" http://openweathermap.org/img/wn/<%=icon%>@2x.png">
      </div>
       </div>
     </div>
   </div>
   <%- include("./partials/footer")%>
